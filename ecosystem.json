{
  "apps": [
    {
      "name": "ai-content-frontend",
      "script": "npm",
      "args": "run preview",
      "cwd": "/root/ai-content-automation-fe/frontend",
      "instances": 1,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "production",
        "PORT": 4173,
        "HOST": "0.0.0.0"
      },
      "log_file": "/var/log/pm2/ai-content-frontend.log",
      "out_file": "/var/log/pm2/ai-content-frontend-out.log",
      "error_file": "/var/log/pm2/ai-content-frontend-error.log",
      "min_uptime": "10s",
      "max_restarts": 10,
      "restart_delay": 4000
    }
  ]
}