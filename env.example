# Environment Configuration Example

# API base URL (frontend will prepend this to all API calls)
# Examples:
#   Local backend: http://localhost:8082/api/v1
#   Staging: https://staging.example.com/api/v1
#   Production: https://api.example.com/api/v1
VITE_API_BASE_URL=
# Copy this file to .env and update the values

# Application Environment
NODE_ENV=production

# Frontend Configuration
VITE_API_URL=http://localhost:8082
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Database Configuration
POSTGRES_USER=ai_content_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=ai_content_automation
POSTGRES_HOST=database
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Backend Configuration
BACKEND_PORT=8082
BACKEND_HOST=backend

# Docker Configuration
COMPOSE_PROJECT_NAME=ai-content-automation

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# External Services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info
