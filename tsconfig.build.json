{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,  
    "noImplicitAny": false,  // Disable for now - has many issues
    "noImplicitReturns": false,  // Disable for now - has missing return statements
    "noImplicitThis": true,
    "noUnusedLocals": false,  // Disable for now - has many unused variables
    "noUnusedParameters": false,  // Disable for now - has many issues
    "noImplicitOverride": false,  // Disable for now - needs class method overrides
    "exactOptionalPropertyTypes": false  // Disable for now - has type compatibility issues
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ]
}
